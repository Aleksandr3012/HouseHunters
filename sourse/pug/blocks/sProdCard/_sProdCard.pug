mixin creditItem(titleTxt, min='1', max='100', step='1', from=1, postFix=' ₽')
	+e.credit-item
		+e.credit-title=titleTxt
		.range-wrap
			input.range-slider-single-js(value='' data-min=min data-from=from  data-max=max data-postfix=postFix data-step=step type='text' name='')



mixin percentsItem(imgNum, txt='txt', date='от 28.05.2020')
	+e.precents-item
		+e.precents-bank
			+e.precents-img
				img.lazy(src="#" data-src=`img/@2x/bank-img-${imgNum}.png` alt="")
			+e.precents-txt=txt
		+e.percents-date=date

mixin popularSlide(slideNum='', garleryNum)
	.swiper-slide
		+b.catalog-row
			+e.item(class=itemModificator)
				+e.slider
					.catalog-item-prev
						+icon('chevron-left')
					.catalog-item-next
						+icon('chevron-right')
					.catalog-item-pugin-js
					.swiper-container.catalog-item-sl-js
						.swiper-wrapper
							+popularSubSlide(1, garleryNum)
							+popularSubSlide(2, garleryNum)
							+popularSubSlide(3, garleryNum)
				+b.catalog-item-description
					+e.price-bl
						+e.price=`3 900 000 ₽${slideNum}`
						+e.A.like(href='#' class=iconLinkClasses)
							+icon(iconName)
					+e.chars-list
						+e.char-item 2-ком. квартира
						+e.char-item 73 кв. м.
						+e.char-item 2/15 эт.
					+e.bot-content
						+e.bot-cont-txt
							+e.street ул. Воскресенская 12А
							+e.city м. Сокольники
						+e.A.btn(href='#')
							+icon('phone')
							span.d-none.d-sm-inline Показать телефон

